<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:linkto="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.project.linkto.customwidget.CustomTextView
                    android:id="@+id/tv_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/colorHint"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ln_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_body"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <com.project.linkto.customwidget.CustomTextView
                        android:id="@+id/tv_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="0 likes"
                        android:textColor="@color/colorHint"
                        android:textSize="12sp"
                        linkto:ctTextFont="bebas" />

                    <com.project.linkto.customwidget.CustomTextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ln_name"
                        android:padding="3dp"
                        android:textSize="13sp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/body">

                <LinearLayout
                    android:id="@+id/items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/likeslayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/commentslayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:visibility="invisible">

                        <com.project.linkto.customwidget.CustomTextView
                            android:id="@+id/tv_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableLeft="@drawable/comment"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="2 comments"
                            android:textColor="@color/colorHint"
                            android:textSize="12sp"
                            linkto:ctTextFont="bebas" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/sharelayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:visibility="invisible">

                        <com.project.linkto.customwidget.CustomTextView
                            android:id="@+id/tv_shares"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableLeft="@drawable/share"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="2 shares"
                            android:textColor="@color/colorHint"
                            android:textSize="12sp"
                            linkto:ctTextFont="bebas" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/itemsComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/items"
                    android:visibility="gone">

                    <com.project.linkto.customwidget.CustomET
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_below="@+id/itemsComment"
                    android:background="@color/colorFacebook"></View>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>